# Use official Playwright image (browsers + libs preinstalled)
FROM mcr.microsoft.com/playwright/python:v1.55.0-jammy

WORKDIR /app

# Copy requirements and install
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose Railway / container port
EXPOSE 8080

# Run FastAPI via gunicorn + uvicorn worker (async)
CMD ["gunicorn", "-k", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8080", "--workers=1", "--threads=2", "--timeout=300", "main:app"]
