FROM mcr.microsoft.com/playwright/python:v1.55.0-jammy

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Install missing system libraries
RUN apt-get update && apt-get install -y \
    libglib2.0-0 libnss3 libgconf-2-4 libxss1 libasound2 libatk1.0-0 \
    libcups2 libxcomposite1 libxdamage1 libxrandr2 libgbm1 libpango-1.0-0 \
    libpangocairo-1.0-0 libgtk-3-0 libx11-6 libxfixes3 libxext6 libexpat1 \
    libdbus-1-3 libatspi2.0-0 libxkbcommon0 \
    && rm -rf /var/lib/apt/lists/*

# Set Playwright browsers path
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

EXPOSE 8080

# Run Flask app (single worker, increased timeout for Playwright)
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers=1", "--threads=2", "--timeout=300", "main:app"]
