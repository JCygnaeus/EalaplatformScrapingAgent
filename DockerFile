# ===============================
# Official Playwright image with browsers preinstalled
# ===============================
FROM mcr.microsoft.com/playwright/python:v1.55.0-jammy

# ===============================
# Set working directory
# ===============================
WORKDIR /app

# ===============================
# Copy Python requirements and install
# ===============================
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# ===============================
# Copy app code
# ===============================
COPY . .

# ===============================
# Expose port
# ===============================
EXPOSE 8080

# ===============================
# Disable Playwright host checks in Docker
# ===============================
ENV PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
ENV PLAYWRIGHT_DRIVER_USE_SANDBOX=0

# ===============================
# Run Flask app with Gunicorn
# Single worker recommended for Playwright
# ===============================
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers=1", "--threads=2", "--timeout=300", "main:app"]
