FROM mcr.microsoft.com/playwright/python:v1.55.0-jammy

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Install missing Chromium libraries
RUN apt-get update && apt-get install -y --no-install-recommends \
    libglib2.0-0 libx11-6 libxkbcommon0 libxcomposite1 libXdamage1 libXext6 \
    libatspi2.0-0 libxfixes3 libxrandr2 libgobject-2.0-0 libnspr4 libnss3 \
    libnssutil3 libsmime3 libgio-2.0-0 libdbus-1-3 libatk1.0-0 libatk-bridge2.0-0 \
    libcups2 libexpat1 libgbm1 libcairo2 libpango-1.0-0 libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Playwright browser path
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

EXPOSE 8080

CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers=1", "--threads=2", "--timeout=300", "main:app"]
